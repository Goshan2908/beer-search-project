<style>
  @import url('https://fonts.googleapis.com/css2?family=Bangers&display=swap');
</style>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Anton&family=Bangers&display=swap');
</style>

<script defer src="/main.js"></script>


<div class="d-flex justify-content-center" style="font-family: 'Bangers', cursive;background-color:#808080 ">
<div ><h1 id='beername'>{{response.name}}</h1></div>
<div><h5> {{response.tagline}}</h5></div>
</div>


<div style="background-color:#E6E6FA;" class="d-flex justify-content-around">
  <div >
<img id='imagebeer' style="height:900px;" src="{{response.image_url}}" alt="{{response.id}}">
  </div>

  <div class="d-flex flex-column bd-highlight mb-3" style="font-size:large;height:900px;max-width: 600px; background-color:#E6E6FA;  border: 1rem solid; font-family: 'Anton', sans-serif;">
    <div class="p-2 bd-highlight">Впервые сварено: {{response.first_brewed}}</div>
      <div class="p-2 bd-highlight">Описание: {{response.description}}</div>
        <div id='abv' class="p-2 bd-highlight">Градусы: {{response.abv}}</div>
          <div id='food' class="p-2 bd-highlight">Еда: {{response.food_pairing}}</div>
          <div style="margin-top: 30px; margin-left: 170px">
            <a href="/randombeer" class="btn btn-primary">RANDOM MORE</a>
          </div>
          
            {{#if username}}
            
            {{!-- <button type="submit" class="btn btn-primary" >ADD BEER</button> --}}
            <a id='addbeer' href="/randombeer" class="btn btn-primary">ADD BEER</a>
           
            {{/if}}
         
  </div>
</div>








 


